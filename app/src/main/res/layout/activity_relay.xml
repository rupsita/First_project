<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".relay"
    android:background="@mipmap/bloodfirst">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:src="@drawable/accont"

        />



        <TextView
            android:id="@+id/txt_nm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_pas"
            android:layout_alignBaseline="@id/edt_nm"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="30dp"
            android:text="User id"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edt_nm"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_above="@id/ed_pas"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="30dp"
            android:layout_toRightOf="@id/txt_nm"
            android:background="@drawable/r_button"
            android:hint="Enter your name"
            android:paddingLeft="25dp" />


        <TextView
            android:id="@+id/txt_pas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_sgn"
            android:layout_alignBaseline="@+id/ed_pas"
            android:layout_marginLeft="25dp"
            android:text="Password"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="20dp" />


        <EditText
            android:id="@+id/ed_pas"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_above="@+id/btn_sgn"
            android:layout_marginLeft="49dp"
            android:layout_marginBottom="25dp"
            android:layout_toRightOf="@+id/txt_pas"
            android:background="@drawable/r_button"
            android:hint="Enter your password"
            android:inputType="textWebPassword"
            android:padding="8dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_sgn"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/round_button"
            android:text="Log In"

            android:textSize="24dp" />
    <TextView
        android:id="@+id/txt_forgot"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_sgn"
        android:layout_marginTop="6dp"

        android:layout_marginLeft="200dp"
        android:text="@string/forgot_password"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp" />

        <TextView
            android:id="@+id/reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_sgn"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="70dp"
            android:text="New user?"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/btn_clk"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_sgn"
            android:layout_alignBaseline="@id/reg"
            android:layout_toRightOf="@id/reg"
            android:text="@string/sign_up"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp" />


    </RelativeLayout>


